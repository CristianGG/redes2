CC = gcc
CFLAGS= -Wfatal-errors -Werror -Wall -Wextra -std=c89 -pedantic-errors -g -O0 -D_BSD_SOURCE -D_POSIX_SOURCE=200112L -lpthread
PRGS = ircc 
OBJS = 

all: clean $(PRGS)

%.o: %.c $(HEADERS)
	$(CC) $(CFLAGS) -c $*.c $(INCLUDE) -o $@
$(PRGS): $(OBJS)
$(PRGS): % : %.o
	$(CC) $(CFLAGS) -o $@ $< $(OBJS) $(LDFLAGS) $(LIBS)

clean:
	-rm -f *.o  *~ $(PRGS)
